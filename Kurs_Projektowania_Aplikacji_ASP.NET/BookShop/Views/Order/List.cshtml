@model List<BookShop.Models.OrderModel>

@if(@Model.Count == 0)
{
    <h1>Nie dokonałaś/eś jeszcze żadnego zamówienia</h1>
}
else
{
    <h1>Twoje zamówienia:</h1>
    <table class="table">
        <thead>
            <tr>
              <th scope="col">Data</th>
              <th scope="col">Podany adres</th>
              <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Date</td>
                    <td>@item.Country, @item.City, ul. @item.Street @item.StreetNumber</td>
                    <td><button type="button" class="btn btn-primary" onclick="location.href='@this.Url.Action("Details", "Order", new {id = item.OrderId})'">Szczegóły</button></td>
                </tr>
            }
        </tbody>
    </table>   
}


