@model List<BookShop.Models.Order.UsersOrdersViewModel>

<h1>Dokonane zamówienia:</h1>

<table class="table">
    <thead>
        <tr>
          <th scope="col">Imię</th>
          <th scope="col">Nazwisko</th>
          <th scope="col">Email</th>
          <th scope="col">Podany adres</th>
          <th scope="col">Data</th>
          <th scope="col">Cena</th>
          <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.FirstName</td>
                <td>@item.LastName</td>
                <td>@item.Email</td>
                <td>@item.Country, @item.City, ul. @item.Street @item.StreetNumber</td>
                <td>@item.Date</td>
                <td>@string.Format("{0:N2}", @item.Price) zł</td>
                <td><button type="button" class="btn btn-primary" onclick="location.href='@this.Url.Action("UserDetails", "Order", new {id = item.OrderId})'">Szczegóły</button></td>
            </tr>
        }
    </tbody>
</table>


